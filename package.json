  },
  "devDependencies": {
    "@metamask/eth-sig-util": "7.0.1",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.9",
    "@nomicfoundation/hardhat-ethers": "3.0.9",
    "@nomicfoundation/hardhat-verify": "2.0.14",
    "@types/adm-zip": "^0.5.7",
    "@types/chai": "^5.2.2",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^24.1.0",
    "@types/qr-image": "^3.2.9",
    "@types/sinon": "^17.0.4",
    "chai": "4.4.0",
    "commander": "12.0.0",
    "dotenv": "16.5.0",
    "eslint": "8.57.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-standard": "5.0.0",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "6.14.4",
    "hardhat": "2.24.3",
    "hardhat-dependency-compiler": "1.2.1",
    "hardhat-deploy": "1.0.3",
    "hardhat-gas-reporter": "2.3.0",
    "keccak256": "1.0.6",
    "merkletreejs": "0.3.11",
    "mock-fs": "^5.5.0",
    "qr-image": "3.2.0",
    "rimraf": "5.0.5",
    "sinon": "^21.0.0",
    "solhint": "4.5.2",
    "solidity-coverage": "0.8.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf artifacts cache coverage coverage.json dist",
    "coverage": "hardhat coverage",
    "deploy": "hardhat deploy --network",
    "deploy:test": "hardhat deploy",
    "lk:deploy": "hardhat deploy:qr --network",
    "qr:create": "ts-node ./src/cli/merkle-drop-cli.ts -gqlcz -v",
    "lk:create": "ts-node ./src/cli/merkle-drop-cli.ts -glc -v",
    "lk:check": "ts-node ./src/cli/merkle-drop-cli.ts -x",
    "lint": "yarn run lint:js && yarn run lint:sol && yarn run lint:ts",
    "lint:fix": "yarn run lint:js:fix && yarn run lint:sol:fix && yarn run lint:ts:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:sol:fix": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix",
    "lint:ts": "tsc --noEmit",
    "lint:ts:fix": "tsc --noEmit",
    "test": "hardhat test",
    "test:unit": "hardhat test test/unit/**/*.test.ts",
    "test:integration": "hardhat test test/integration/**/*.test.ts",
    "test:e2e": "hardhat test test/e2e/cli.test.ts test/e2e/hardhat-deployment.test.ts test/e2e/hardhat-tasks.test.ts",
    "test:contracts": "hardhat test test/contracts/*.test.js",
    "test:all": "hardhat test",
    "test:coverage": "hardhat coverage",
    "drop": "hardhat drop --network",
    "verify": "hardhat verify-deployment --network"
  },
  "resolutions": {
    "elliptic": "6.6.1"
  }
}
